  &__table {
    display: flex;
    flex-wrap: wrap;
    margin: 30px 0 50px;
    flex-direction: column;

    label {
      @media (--mobile) {
        display: block;
      }
    }

    &-cell {
      padding: 30px 0;
      font-size: 18px;
      color: var(--text-gray);
      letter-spacing: 0.08px;

      &:not(:last-of-type){
        border-bottom: 1px solid #2E3342;
      }

      @media (--mobile) {
        padding: 20px 0 !important;
      }

      code {
        display: block;
        white-space: pre;
        margin-top: 20px;
        font-size: 15px;
        color: #C2C4D1;
        letter-spacing: -0.49px;
        line-height: 20px;
        font-family: monospace, monospace;

        @media (--mobile) {
          font-size: 13px;
          max-width: 100%;
          overflow-x: auto;
        }
      }
    }

    @supports (display: grid) {
      @media (--desktop) {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        grid-gap: 1px;
        grid-auto-rows: minmax(150px, auto);
        background: #2E3342;

        @media (--mobile) {
          display: block;
          background: transparent;
        }

        &-cell {
          border: 0 !important;
          padding: 35px;
          background: var(--bg-main);

          /* left side */
          &:nth-of-type(2n+1) {
            padding-left: 0;
          }

          /* right side */
          &:nth-of-type(2n) {
            padding-right: 0;
          }

          /* top side */
          &:nth-of-type(1),
          &:nth-of-type(2){
            padding-top: 0;
          }

          /* bottom side */
          &:nth-last-of-type(1),
          &:nth-last-of-type(2){
            padding-bottom: 0;
          }
        }
      }
    }
  }

  &__table-cell &__button {
    float: right;
    margin-top: -0.5em;

    @media (--mobile) {
      float: none;
      margin-top: 15px;
    }
  }

  &__colors {
    float: right;
    margin-top: -0.2em;

    @media (--mobile) {
      float: none;
      display: block;
      margin-top: 15px;
    }

    &-item {
      display: inline-block;
      width: 22px;
      height: 22px;
      border-radius: 3px;
      background: #F86464;
      margin-left: 8px;
      margin-top: -3px;
      vertical-align: middle;
      cursor: pointer;

      @media (--mobile) {
        margin-left: 0;
        margin-right: 10px;
        width: 30px;
        height: 30px;
      }

      &--blue {
        background: #519AFF;
      }

      &--yellow {
        background: #F3FF6F;
      }

      &--green {
        background: #62FF99;
      }

      &--pink {
        background: #FFC5FA;
      }
    }

    input {
      background: rgba(0,0,0,0.20);
      box-shadow: inset 0 4px 4px 0 rgba(0,0,0,0.16);
      border-radius: 3px;
      font-size: 12px;
      color: rgba(255, 255, 255, 0.3);
      letter-spacing: 1.1px;
      border: 0;
      outline: none;
      width: 81px;
      line-height: 31px;
      height: 31px;
      text-align: center;
      vertical-align: middle;
      margin-top: -3px;
    }
  }

  &__docs {
    font-size: 18px;
    letter-spacing: 0.15px;
    color: var(--text-gray);

    a {
      color: var(--text-link);
    }
  }

  &__how {
    p {
      max-width: 565px;
      font-size: 15.9px;
      color: var(--text-gray);
      letter-spacing: 0.24px;
      line-height: 22px;
    }
  }

  &__gifs {
    display: flex;
    justify-content: space-between;
    margin-top: 35px;

    @media (--mobile) {
      flex-direction: column;
    }

    &-item {
      width: 47%;
      video {
        max-width: 100%;
      }

      @media (--mobile) {
        width: 100%;
        height: 65vw;
      }

      &:not(:last-of-type){
        @media (--mobile) {
          margin-bottom: 20px;
        }
      }
    }
  }

  &__footer {
    display: flex;
    border-top: 1px solid rgba(255,255,255, .1);
    margin-top: 50px;
    color: var(--text-gray);
    font-size: 14.4px;
    padding: 20px 0;
    line-height: 1.45em;

    @media (--mobile) {
      flex-wrap: wrap;
    }

    a {
      color: var(--text-link);
      text-decoration: none;
    }

    &-right {
      margin-left: auto;

      @media (--mobile) {
        margin-top: 15px;
        flex-basis: 100%;
      }
    }
  }
}

/**
 * Highlighted code
 */
.hcode {
  &--keyword {
    color: #7e869b;
  }

  &--object {
    color: #a2abc1;
  }

  &--method {
    color: #787c90;
  }

  &--property {
    color: #85869b;
  }

  &--string {
    color: #77b188;
  }

  &--number {
    color: #4ba2d1;
  }
}
